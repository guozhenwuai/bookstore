<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
  
<hibernate-mapping package="model">
    <class name="OrderItem" table="order_item">
        <composite-id>
            <key-property name="orderId" column="order_id"></key-property>
            <key-property name="bookId" column="book_id"></key-property>
        </composite-id>
        <property name="num"/>
        <property name="price"/>
        <many-to-one name="book" class="model.Book" column="book_id" insert="false" update="false" not-null="true"/>
    </class>
</hibernate-mapping>